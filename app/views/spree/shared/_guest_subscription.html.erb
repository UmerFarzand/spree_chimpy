 <div class="newsletter" style="width:100%; background-color: #fff; ">
  <div class="title-block">
    <div class="page-heading font-title">
      Signup for Newsletter
    </div>
    <div class="promotext">Weâ€™ll never share your email address with a third-party. </div>
  </div>

  <div class="block_content ">
    <% @subscriber ||= Spree::Chimpy::Subscriber.new %>
    <%= form_for @subscriber, html: {class: "form-group form-inline signup send-mail"} do |f| %>
      <div class="form-group">
        <div class="input-box form-group form-inline signup send-mail">
          <%= f.email_field :email, placeholder: Spree.t(:placeholder, scope: [:chimpy, :email]), size: "35" %>
          <%= f.hidden_field :subscribed, value: true %>
        </div>
        <div class="subcribe">
          <button class="btn btn-primary btn-default font-title" type="submit" onclick="return subscribe_newsletter();" name="submit">
            Subscribe
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <!--/.modcontent-->

</div>